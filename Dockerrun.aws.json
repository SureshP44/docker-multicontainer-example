{
    "AWSEBDockerrunVersion":2,
    "containerDefinitions":[
        {
            "name":"client",
            "image":"suresha52/multicontainer-client",
            "host":"client",
            "essential": false
        },
        {
            "name":"server",
            "image":"suresha52/multicontainer-server",
            "host":"api",
            "essential":false
        }, {
            "name":"worker",
            "image":"suresha52/multicontainer-worker",
            "host":"worker",
            "essential":false
        },{
            "name":"nginx",
            "image":"suresha52/multicontainer-nginx",
            "host":"nginx",
            "essential": true,
            "portMappings":[{
                "hostPort": 80,
                "containerPort":80
            }],
            "links": ["client","server"]
        }
    ]
}